}

.product-single__thumbnails-item--medium {
  @include media-query($medium-up) {
    flex: 0 0 percentage(1 / 3);
  }

  @include media-query($large-up) {
    flex: 0 0 25%;
  }
}

.product-single__thumbnails-item--large {
  @include media-query($medium-up) {
    flex: 0 0 25%;
  }

  @include media-query($large-up) {
    flex: 0 0 20%;
